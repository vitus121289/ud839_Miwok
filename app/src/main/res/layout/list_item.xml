<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/words_image_view"
        style="@style/ImageStyle"
        tools:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:paddingRight="16dp"
        android:id="@+id/words_parent_layout"
        style="@style/InnerRelativeLayoutStyle"
        tools:background="@color/category_numbers">

        <LinearLayout
            style="@style/InnerLinearLayoutStyle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/miwok_text_view"
                style="@style/MiwokTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="lutti" />

            <TextView
                android:id="@+id/default_text_view"
                style="@style/DefaultTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="one" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/arrow_ic_width"
            android:layout_height="@dimen/arrow_ic_height"
            android:src="@drawable/ic_play_arrow"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</LinearLayout>